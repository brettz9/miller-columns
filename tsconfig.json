{
  "compilerOptions": {
    "lib": ["es2024", "DOM"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2024"
  },
  "include": [
    "*.js",
    "demos/**/*.js",
    "src/**/*.js",
    "tests/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
